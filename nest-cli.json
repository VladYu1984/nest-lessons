{
  "$schema": "https://json.schemastore.org/nest-cli",
  "monorepo": true,
  "collection": "@nestjs/schematics",
  "root": "apps",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "main-service": {
      "type": "application",
      "root": "apps/main-service",
      "entryFile": "main",
      "sourceRoot": "apps/main-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main-service/tsconfig.app.json"
      }
    }
  }
}